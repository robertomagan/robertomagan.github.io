	publisher = {Springer International Publishing},
	author = {Magán-Carrión, Roberto and Urda, Daniel and Díaz-Cano, Ignacio and Dorronsoro, Bernabé},
	editor = {Gude Prego, Juan José and de la Puerta, José Gaviria and García Bringas, Pablo and Quintián, Héctor and Corchado, Emilio},
	year = {2022},
	keywords = {Information security, NIDS, Cybersecurity, Machine learning, Feature engineering},
	pages = {116--125},
