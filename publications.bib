	month = jun,
	year = {2021},
	note = {ISSN: 2166-0727},
	keywords = {MANET, Bibliographies, VANET, Market research, Security, Resilience, Ad hoc networks, Systematics, Taxonomy, Bibliometrics, Survivability, Tolerance},
	pages = {1--5},
	file = {IEEE Xplore Abstract Record:files/3672/9476278.html:text/html;IEEE Xplore Full Text PDF:files/3673/Rodríguez-Baeza et al. - 2021 - Advances on Security in Ad Hoc Networks A prelimi.pdf:application/pdf},
